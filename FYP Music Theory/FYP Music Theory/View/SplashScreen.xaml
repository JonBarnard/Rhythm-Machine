<Window x:Class="FYP_Music_Theory.View.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashScreen" Height="100" Width="300"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ProgressBar Grid.Row="0" Margin="10" Name="PhraseLoadingProgress" Minimum="0" Height="20" />
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Loading asset "/>
            <TextBlock Name="Asset" />
            <TextBlock Text=" out of " />
            <TextBlock Name="TotalAssets" />

        </StackPanel>
    </Grid>
</Window>
